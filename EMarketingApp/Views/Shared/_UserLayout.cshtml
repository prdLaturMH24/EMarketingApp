<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>E-Marketing - @ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    <!-- Template Main CSS File -->
    <link href="~/Content/assets/css/style.css" rel="stylesheet">

    <!-- Favicons -->
    <link href="~/Content/assets/img/favicon.png" rel="icon">
    <link href="~/Content/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/Content/assets/vendor/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/655fe7a250.js" crossorigin="anonymous"></script>

</head>
<body>
    <header id="header" class="header fixed-top d-flex align-items-center">

        <div class="d-flex align-items-center justify-content-between">
            <a href="@Url.Action("Index","User")" class="logo d-flex align-items-center">
                <img src="~/Content/assets/img/logo.png" alt="">
                <span class="d-none d-lg-block">E-Marketing</span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div><!-- End Logo -->

        @if (Convert.ToBoolean(Session["IsLoggedIn"]))
        {
            <nav class="header-nav ms-auto">
                <ul class="d-flex align-items-center">

                    <li class="nav-item dropdown pe-3">

                        <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                            <img src="@Url.Content(Session["photoUrl"].ToString())" alt="Profile Image" class="rounded-circle">
                            <span class="d-none d-md-block dropdown-toggle ps-2">@Session["u_username"]</span>
                        </a><!-- End Profile Iamge Icon -->

                        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                            <li class="dropdown-header">
                                <h6>@Session["u_username"]</h6>
                                <span>Web Designer</span>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>

                            <li>
                                <a class="dropdown-item d-flex align-items-center" href="users-profile.html">
                                    <i class="bi bi-person"></i>
                                    <span>My Profile</span>
                                </a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>

                            <li>
                                <a class="dropdown-item d-flex align-items-center" href="users-profile.html">
                                    <i class="bi bi-gear"></i>
                                    <span>Account Settings</span>
                                </a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>

                            <li>
                                <a class="dropdown-item d-flex align-items-center" href="@Url.Action("LogOut","Auth")">
                                    <i class="bi bi-box-arrow-right"></i>
                                    <span>Sign Out</span>
                                </a>
                            </li>

                        </ul><!-- End Profile Dropdown Items -->
                    </li><!-- End Profile Nav -->

                </ul>
            </nav><!-- End Icons Navigation -->

        }
    </header><!-- End Header -->

    <aside id="sidebar" class="sidebar">

        <ul class="sidebar-nav" id="sidebar-nav">

            <li class="nav-item">
                <a class="nav-link " href="@Url.Action("Index","Auth")">
                    <i class="bi bi-grid"></i>
                    <span>Dashboard</span>
                </a>
            </li><!-- End Dashboard Nav -->

            <li class="nav-item">
                <a class="nav-link " href="@Url.Action("Categories","User")">
                    <i class="bi bi-grid"></i>
                    <span>Categories</span>
                </a>
            </li><!-- End Categories Nav -->
            <!-- End Products Nav -->

            @if (Convert.ToBoolean(Session["IsLoggedIn"]))
            {
                <li class="nav-item">
                    <a class="nav-link collapsed text-decoration-none" data-bs-target="#components-nav" data-bs-toggle="collapse" href="#">
                        <i class="bi bi-menu-button-wide"></i><span>Products</span>
                        <i class="bi bi-chevron-down ms-auto"></i>
                    </a>
                    <ul id="components-nav" class="nav-content collapse" data-bs-parent="#sidebar-nav">
                        <li>
                            <a href="@Url.Action("Products","User")">
                                <i class="bi bi-circle"></i><span>All Products</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("AddProduct","User")">
                                <i class="bi bi-circle"></i><span>Add Product</span>
                            </a>
                        </li>
                    </ul>
                </li><!-- End Products Nav -->
                <li class="nav-heading">Pages</li>

                <li class="nav-item">
                    <a class="nav-link collapsed" href="@Url.Action("Contact","Home")">
                        <i class="bi bi-envelope"></i>
                        <span>Contact</span>
                    </a>
                </li><!-- End Contact Page Nav -->

                <li class="nav-item">
                    <a class="nav-link collapsed" href="@Url.Action("About","Home")">
                        <i class="bi bi-envelope"></i>
                        <span>About</span>
                    </a>
                </li><!-- End About Page Nav -->

                <li class="nav-heading">Account</li>

                <li>
                    <a class="nav-link collapsed" href="@Url.Action("LogOut","Auth")">
                        <i class="bi bi-lock"></i>
                        <span>Sign Out</span>
                    </a>
                </li>



            }
            else
            {
                <li class="nav-heading">Pages</li>
                <li class="nav-item">
                    <a class="nav-link collapsed" href="@Url.Action("Login","Auth")">
                        <i class="bi bi-envelope"></i>
                        <span>Sign In</span>
                    </a>
                </li><!-- End Sign In Page Nav -->

                <li class="nav-item">
                    <a class="nav-link collapsed" href="@Url.Action("Register","Auth")">
                        <i class="bi bi-envelope"></i>
                        <span>Sign Up</span>
                    </a>
                </li><!-- End Sign Up Page Nav -->
            }



        </ul>

    </aside><!-- End Sidebar-->

    <div class="container body-content">
        @RenderBody()
    </div>
    <footer id="footer" class="footer">
        <div class="copyright">
            &copy; Copyright <strong><span>E-Marketing App</span></strong>. All Rights Reserved
        </div>
        <div class="credits">
            <!-- All the links in the footer should remain intact. -->
            <!-- You can delete the links only if you purchased the pro version. -->
            <!-- Licensing information: https://bootstrapmade.com/license/ -->
            <!-- Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/nice-admin-bootstrap-admin-html-template/ -->
            Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>
        </div>
        <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    </footer><!-- End Footer -->
    <!-- Vendor JS Files -->
    <script src="~/Content/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>


    <!-- Template Main JS File -->
    <script src="~/Content/assets/js/main.js"></script>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
